<html>
  <head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title> Sign up </title>
  </head>
  <body>
  <br>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <form>
        <div class="form-group">
          <label >First name</label>
          <input type="text" class="form-control" id="firstName" placeholder="First name">
        </div>
        <div class="form-group">
          <label >Last Name</label>
          <input type="text" class="form-control" id="lastName" placeholder="Last Name">
        </div>
        <div class="form-group">
          <label >Username</label>
          <input type="text" class="form-control" id="username" placeholder="Username">
        </div>
        <div class="form-group">
          <label >Mobile</label>
          <input type="text" class="form-control" id="mobile" placeholder="Mobile number">
        </div>
        <label>Blogger categories</label>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="cat1" value="Beauty" checked> Beauty
          </label>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="cat2" value="Travel"> Travel
          </label>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="cat3" value="Family"> Family
          </label>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="cat4" value="IT"> IT
          </label>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="cat5" value="LifeStyle"> Life style
          </label>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="cat6" value="Business"> Business
          </label>
        </div>
        <div class="form-group">
          <label>Facebook</label>
          <input type="text" class="form-control" id="facebook" placeholder="Facebook page url">
        </div>
        <div class="form-group">
          <label>Instagram</label>
          <input type="text" class="form-control" id="instagram" placeholder="Instagram account">
        </div>
        <div class="form-group">
          <label>Youtube</label>
          <input type="text" class="form-control" id="youtube" placeholder="Youtube channel">
        </div>
        <div class="form-group">
          <label>Twitter</label>
          <input type="text" class="form-control" id="twitter" placeholder="Twitter account">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" id="email" placeholder="Email address">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="form-group">
          <label>Confirm password</label>
          <input type="password" class="form-control" id="re-password" placeholder="Confirm Password">
        </div>
      </form>
      <a href="/login"> Already have an account </a><br>
      <button class="btn btn-default" onclick="signup();">Sign up</button>
    </div>
    <div class='col-md-2'>
    </div>
  </div>
  </body>
  <script>
    function signup(){
      var categories = [];
      for(var i =0;i<5;i++){
        if($('#cat'+i).prop('checked') == true){
          categories.push($('#cat'+i+':checked').val());
        }
      }
      var json = {
        "firstName" : document.getElementById('firstName').value,
        "lastName" : document.getElementById('lastName').value,
        "username": document.getElementById('username').value,
        "mobile" : document.getElementById('mobile').value,
        "categories" : categories,
        "facebook" : document.getElementById('facebook').value,
        "instagram": document.getElementById('instagram').value,
        "youtube" : document.getElementById('youtube').value,
        "twitter" : document.getElementById('twitter').value,
        "email": document.getElementById('email').value,
        "password" : document.getElementById('password').value
      }
      $.post('/api/v1/signup',json,function(data,status){
        json = null;
        if(data.error == false){
          alert(data.message);
          window.location.replace("/login");
        }
        
      })
      //alert($('.form-check-input:checked').val());
    }
  </script>
<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
